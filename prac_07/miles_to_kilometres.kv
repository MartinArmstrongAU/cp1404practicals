BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_increment(int(input_number.text), 1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_increment(int(input_number.text), -1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        text: app.output_distance
        color: (1, 1, 0, 1)